<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.bloodlab.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_newsFragment"
            app:destination="@id/newsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_turnRatingFragment"
            app:destination="@id/turnRatingFragment" />
        <action
            android:id="@+id/action_homeFragment_to_addressFragment"
            app:destination="@id/addressFragment" />
        <action
            android:id="@+id/action_homeFragment_to_galleryFragment"
            app:destination="@id/galleryFragment" />
        <action
            android:id="@+id/action_homeFragment_to_aboutUsFragment"
            app:destination="@id/aboutUsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_suggestionFragment"
            app:destination="@id/suggestionFragment" />
        <action
            android:id="@+id/action_homeFragment_to_phoneRatingFragment"
            app:destination="@id/phoneRatingFragment" />
        <action
            android:id="@+id/action_homeFragment_to_moreInfoFragment"
            app:destination="@id/moreInfoFragment" />
        <action
            android:id="@+id/action_homeFragment_to_videoGalleryFragment"
            app:destination="@id/videoGalleryFragment" />
    </fragment>
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.bloodlab.NewsFragment"
        android:label="NewsFragment" />
    <fragment
        android:id="@+id/turnRatingFragment"
        android:name="com.example.bloodlab.TurnRatingFragment"
        android:label="TurnRatingFragment" />
    <fragment
        android:id="@+id/addressFragment"
        android:name="com.example.bloodlab.AddressFragment"
        android:label="AddressFragment" />
    <fragment
        android:id="@+id/galleryFragment"
        android:name="com.example.bloodlab.GalleryFragment"
        android:label="GalleryFragment" />
    <fragment
        android:id="@+id/aboutUsFragment"
        android:name="com.example.bloodlab.AboutUsFragment"
        android:label="AboutUsFragment" />
    <fragment
        android:id="@+id/suggestionFragment"
        android:name="com.example.bloodlab.SuggestionFragment"
        android:label="SuggestionFragment" />
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.bloodlab.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/phoneRatingFragment"
        android:name="com.example.bloodlab.PhoneRatingFragment"
        android:label="PhoneRatingFragment" />
    <fragment
        android:id="@+id/moreInfoFragment"
        android:name="com.example.bloodlab.MoreInfoFragment"
        android:label="MoreInfoFragment" />
    <fragment
        android:id="@+id/videoGalleryFragment"
        android:name="com.example.bloodlab.VideoGalleryFragment"
        android:label="VideoGalleryFragment" >
        <action
            android:id="@+id/action_videoGalleryFragment_to_firstVideoFragment"
            app:destination="@id/firstVideoFragment" />
        <action
            android:id="@+id/action_videoGalleryFragment_to_secondViddeoFragment"
            app:destination="@id/secondViddeoFragment" />
    </fragment>
    <fragment
        android:id="@+id/firstVideoFragment"
        android:name="com.example.bloodlab.FirstVideoFragment"
        android:label="fragment_first_video"
        tools:layout="@layout/fragment_first_video" />
    <fragment
        android:id="@+id/secondViddeoFragment"
        android:name="com.example.bloodlab.SecondViddeoFragment"
        android:label="fragment_second_viddeo"
        tools:layout="@layout/fragment_second_viddeo" />
</navigation>